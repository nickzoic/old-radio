#!/bin/bash
# $Id: perdevice,v 1.3 2009-07-22 05:49:33 nick Exp $

PROGRAM=$1
BAUDRATE=${2:-9600}

#./identify.pl | (
#    while read DEVICE IDENTIFIER ETC; do

(
	for DEVICE in /dev/radio*; do
		echo $PROGRAM $DEVICE $BAUDRATE $IDENTIFIER
		$PROGRAM $DEVICE $BAUDRATE $IDENTIFIER &
	done
	jobs
	wait
)
